{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "src/decorators"]
}
